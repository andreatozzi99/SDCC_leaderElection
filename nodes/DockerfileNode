FROM golang:1.20-alpine

WORKDIR /app

COPY go.mod go.work ./
RUN go mod download

COPY ./nodes .

# Crea un file di log vuoto per memorizzare lo stato del nodo
# Questo file verr√† utilizzato per recuperare lo stato del nodo in caso di riavvio del container
RUN touch /app/logfile.json

RUN go build -o node *.go

CMD ["./node"]